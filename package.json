{
    "name": "gtools",
    "version": "0.2.17",
    "description": "Small library including utils methods for easier life",
    "main": "./lib/index.js",
    "module": "./lib-esm/index.js",
    "types": "./lib/index",
    "homepage": "https://g43riko.github.io/GTools",
    "keywords": [
        "tools",
        "utils",
        "typescript",
        "javascript"
    ],
    "private": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/G43riko/GTools.git"
    },
    "bugs": {
        "email": "gcsollei@hotmail.com",
        "url": "https://github.com/G43riko/GTools/issues"
    },
    "scripts": {
        "prepare": "npm run clean && npm run doc",
        "test": "mocha --require ts-node/register ./src/**/*.spec.ts",
        "coverage": "nyc --extension=.ts --extension=.js --exclude=src/**/*.spec.ts npm test && nyc report --reporter=text-lcov | coveralls",
        "coverage2": "nyc --extension=.ts --extension=.js --exclude=src/**/*.spec.ts --reporter=lcov npm test",
        "tsc": "tsc",
        "build": "tsc --outDir lib && tsc -m es6 --outDir lib-esm && webpack --config webpack.prod.js",
        "release": "npm publish",
        "release:major": "npm version major && npm publish",
        "release:minor": "npm version minor && npm publish",
        "release:patch": "npm version patch && npm publish",
        "doc": "typedoc --out docs",
        "pack2": "npm run tsc && webpack",
        "copy": "copy package.json out",
        "clean": "rimraf out doc docs coverage bin .nyc_output _bundles lib lib-esm",
        "lint": "tslint --project ."
    },
    "author": {
        "email": "gcsollei@hotmail.com",
        "name": "Gabriel Csollei"
    },
    "browser": {
        "http": false,
        "https": false,
        "net": false,
        "fs": false,
        "path": false,
        "stream": false,
        "tls": false
    },
    "license": "ISC",
    "devDependencies": {
        "@types/chai": "^4.2.13",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.11.8",
        "copy": "^0.3.2",
        "chai": "^4.2.0",
        "coveralls": "^3.1.0",
        "mocha": "^8.1.3",
        "mocha-lcov-reporter": "^1.3.0",
        "nyc": "^15.1.0",
        "ts-node": "^9.0.0",
        "tslint": "^6.1.3",
        "tslint-consistent-codestyle": "^1.16.0",
        "typedoc": "^0.19.2",
        "typescript": "^4.0.3",
        "webpack": "^5.1.3",
        "webpack-cli": "^4.0.0",
        "tslint-clean-code": "^0.2.10",
        "tslint-sonarts": "^1.9.0",
        "terser-webpack-plugin": "^5.0.0",
        "awesome-typescript-loader": "^5.2.1"
    },
    "dependencies": {
        "moment": "^2.29.1"
    }
}
