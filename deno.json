{
    "workspace": ["./workspaces/enums", "./workspaces/utils"],
    "tasks": {
        "bench": "deno bench",
        "bench:utils": "deno bench --filter utils",
        "doc": "deno doc --html --name=\"@g43/tools\" --output=docs workspaces/enums/src/index.ts workspaces/utils/src/index.ts",
        "doc:enums": "deno doc --html --name=\"@g43/enums\" --output=docs workspaces/enums/src/index.ts",
        "test": "deno test workspaces/**/src/**/*.spec.ts",
        "test:doc": "deno test --doc workspaces/**/src/**/*.ts",
        "test:coverage": "deno test --coverage workspaces/**/src/**/*.spec.ts",
        "test:coverage:doc": "deno test --doc --coverage workspaces/**/src/**/*.ts",
        "coverage": "deno coverage --html --exclude=\"(spec|bench)\\.(js|mjs|ts|jsx|tsx)$\"",
        "serveDocs": "deno run --allow-net --watch --allow-read utils/serve-docs.ts",
        "serveCoverage": "deno run --allow-net --watch --allow-read utils/serve-coverage.ts"
    },
    "lint": {
        "rules": {
            "exclude": ["no-explicit-any"]
        }
    },
    "test": {
        "exclude": ["**/*.bench.ts", "srcOld"]
    },
    "bench": {
        "include": ["workspaces/**/src"],
        "exclude": ["srcOld"]
    },
    "fmt": {
        "lineWidth": 120,
        "indentWidth": 4,
        "exclude": [
            "docs",
            "coverage",
            "srcOld"
        ]
    },
    "compilerOptions": {
        "strict": true
    },
    "imports": {
        "@std/assert": "jsr:@std/assert@1.0.6",
        "@std/http": "jsr:@std/http@1.0.8"
    }
}
